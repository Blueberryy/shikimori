- if poster
  picture data-poster_id=poster.id
    source[
      src=cdn_poster_url(db_entry: db_entry, poster: poster, derivative: derivative)
      srcset='#{cdn_poster_url db_entry: db_entry, poster: poster, derivative: :"#{derivative}_2x"} 2x'
      type='image/webp'
    ]
    img[
      alt=db_entry.name
      src=cdn_poster_url(db_entry: db_entry, poster: poster, derivative: :"#{derivative}_alt")
      srcset='#{cdn_poster_url db_entry: db_entry, poster: poster, derivative: :"#{derivative}_alt_2x"} 2x'
      loading='lazy'
    ]
- else
  img[
    alt=db_entry.name
    src='/assets/globals/missing_original.jpg'
    loading='lazy'
  ]
