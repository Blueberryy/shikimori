- if poster
  picture[
    class=(:magnificable if local_assigns[:is_magnificable])
    data-href=(poster.image.url if local_assigns[:is_magnificable])
  ]
    source[
      src=cdn_poster_url(db_entry: db_entry, poster: poster, derivative: :small)
      srcset='#{cdn_poster_url db_entry: db_entry, poster: poster, derivative: :medium} 2x'
      type='image/webp'
    ]
    img[
      alt=db_entry.name
      src=cdn_poster_url(db_entry: db_entry, poster: poster, derivative: :small_alt)
      srcset='#{cdn_poster_url db_entry: db_entry, poster: poster, derivative: :medium_alt} 2x'
      loading='lazy'
    ]
- else
  img[
    alt=db_entry.name
    src='/assets/globals/missing_original.jpg'
    loading='lazy'
  ]
